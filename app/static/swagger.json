{
  "swagger": "2.0",
  "info": {
    "title": "Storage API",
    "version": "1.0.0"
  },
  "tags": [
    {
      "name": "Health",
      "description": "Health checks related to the API, making sure everything is up and running."
    },
    {
      "name": "Users",
      "description": "All of your user related needs, creating, destroying, etc."
    },
    {
      "name": "Videos",
      "description": "Everything related to videos, uploading, fetching, etc."
    }
  ],
  "paths": {
    "/": {
      "get": {
        "tags": [
          "Health"
        ],
        "description": "Returns message showing app is up",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      }
    },
    "/users/create" : {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Creates a new user",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "User",
            "in": "body",
            "description": "JSON data for the API",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User created successfully"
          },
          "400": {
            "description": "Something is wrong with your request type"
          },
          "500": {
            "description": "Something went wrong on our end"
          }
        }
      }
    },
    "/users/<username>/delete" : {
      "post": {
        "tags": [
          "Users"
        ],
        "description": "Deletes a user and all of their data from the server",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "User",
            "in": "body",
            "description": "JSON data for the API",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User deleted successfully"
          },
          "400": {
            "description": "Something is wrong with your request type"
          },
          "500": {
            "description": "Something went wrong on our end"
          }
        }
      }
    },
    "/video/<username>/upload": {
      "post": {
        "tags": [
          "Videos"
        ],
        "description": "Uploads a video to the server for a user",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "UserVideoUpload",
            "in": "body",
            "description": "JSON data for the API",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UserVideoUpload"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Video uploaded successfully"
          },
          "400": {
            "description": "Something is wrong with your request type"
          },
          "500": {
            "description": "Something went wrong on our end"
          }
        }
      }
    },
    "/video/<username>/all": {
      "get": {
        "tags": [
          "Videos"
        ],
        "description": "Fetches all of the videos for a user",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/VideoRequestResponse"
            }
          },
          "400": {
            "description": "Something is wrong with your request type"
          },
          "500": {
            "description": "Something went wrong on our end"
          }
        }
      }
    },
    "/video/<username>/by-date": {
      "post": {
        "tags": [
          "Videos"
        ],
        "description": "Fetches all of the videos for a user by date",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "VideoByDate",
            "in": "body",
            "description": "JSON data for the API",
            "required": true,
            "schema": {
              "$ref": "#/definitions/VideoByDate"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "schema": {
              "$ref": "#/definitions/VideoRequestResponse"
            }
          },
          "400": {
            "description": "Something is wrong with your request type"
          },
          "500": {
            "description": "Something went wrong on our end"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        }
      }
    },
    "UserVideoUpload": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "video": {
          "type": "binary"
        }
      }
    },
    "VideoByDate": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "date": {
          "type": "string"
        }
      }
    },
    "VideoRequestResponse": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string"
        },
        "videos": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
